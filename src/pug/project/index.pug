extends ../layout/_index.pug

block contents
  include ../components/header/_index.pug
  div
    div.p-breadcrumb
      div.p-breadcrumb_item
        a(href="/") Top
      div.p-breadcrumb_item
        a(href="/project") プロジェクト詳細

    div.p-project_eyecatch
      div.p-project_eyecatch_inner(style="background-image: url(/images/project/project_image.png)")
        div.p-project_title_wrap
          h1.p-project_title プロジェクトタイトル化粧品メーカーのECプロジェクトタイトル化粧品メーカーのEC
          div.p-project_status
              div.p-project_position ポジション名
              div.p-project_time 15時間前

    div.p-project_block
      div.p-project_box
        div.p-project_box_title 条件
        div.p-project_box_content
          div.p-project_term
            div.p-project_term_label ポジション
            div.p-project_term_value マーケター
          div.p-project_term
            div.p-project_term_label 月額報酬
            div.p-project_term_value ¥100,000 - ¥200,000
          div.p-project_term
            div.p-project_term_label 勤務地
            div.p-project_term_value 東京
          div.p-project_term
            div.p-project_term_label プロジェクト開始時期
            div.p-project_term_value 2017年 8月中
          div.p-project_term
            div.p-project_term_label プロジェクト終了時期
            div.p-project_term_value 2017年 12月ごろ
          div.p-project_term
            div.p-project_term_label 募集人数
            div.p-project_term_value 1人
          div
            div.p-project_term_label その他条件
            div.p-project_term_other 週2日以上の常駐希望それ以外はリモート可

      div.p-project_box
        div.p-project_box_title プロジェクト概要
        div.p-project_box_content='ここに概要説明文が入ります。\nこのプロジェクトはBizlinkの登録者を増やすためのマーケティング施策企画及び実行です。\nターゲット：フリーランスの下記領域に専門性を有した人材'

      div.p-project_box
        div.p-project_box_title プロジェクトの目指すもの
        div.p-project_box_content
          div.p-project_aim
            div.p-project_aim_label AS IS
            div.p-project_aim_value='AS ISではなく現在の状況でも良いかも。ここにテキストが入ります。'
          div.p-project_aim
            div.p-project_aim_label TO BE
            div.p-project_aim_value='これもtobeではなく、目指していることとかでも良いかも。テキストが入ります。\n改行したら・・・'
          div.p-project_aim
            div.p-project_aim_label GAP
            div.p-project_aim_value='GAPって馴染みがないかもしれません'
          div.p-project_aim
            div.p-project_aim_label KGI
            div.p-project_aim_value='KGIももしかしたら馴染みがないかもしれません'

      div.p-project_box
        div.p-project_box_title クライアント詳細
        div.p-project_box_content
          div.p-project_client_name 株式会社クライアント
          div.p-project_client
            div.p-project_client_label URL
            div.p-project_client_value https://bizlink.herokuapp.com/
          div.p-project_client
            div.p-project_client_label 会社概要
            div.p-project_client_value='会社概要がここに入ります\n必須項目でなくてもよいような気もします'
          div.p-project_client
            div.p-project_client_label 売上規模
            div.p-project_client_value 1億
          div.p-project_client
            div.p-project_client_label 従業員数
            div.p-project_client_value 10名 程度

  include ../components/footer/_index.pug

  div.p-project_subscription
    button.c-button_subscription
      span.c-button_subscription_inner 今すぐ応募する
